<div class="container">
    <div class="row mt-5">
        {{#each movies}}
        <div class="card col-3 m-3 p-3 text-center" style="width: 18rem;">
            <img class="card-img-top mx-auto mb-5" src="{{image}}" alt="{{title}}">
            <div class="card-body">
                <h3 class="card-title h6">{{title}}</h3>
            </div>
            <div class="card-body">
                <a class="link" href="movie/{{_id}}">See more</a>
            </div>
        </div>
        {{/each}}
    </div>
</div>